@model IEnumerable<CCOLPROYECTOS_V1.EstadoSerPro>

@{
    ViewBag.Title = "Index";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/employee.js"></script>
    <title>CCOL PROYCETOS </title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <script src="http://code.jquery.com/jquery-2.1.4.min.js" type="text/javascript"></script>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script type="text/javascript">
        $(document).ready(function () {
            $('#entradafilter').keyup(function () {
                var rex = new RegExp($(this).val(), 'i');
                $('.contenidobusqueda tr').hide();
                $('.contenidobusqueda tr').filter(function () {
                    return rex.test($(this).text());
                }).show();

            })

        })
    </script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>


</head>
<p>

</p>
<body>
    <nav class="navbar navbar-fluid" style=" background-color:aliceblue">
        <ul class="nav navbar-nav">

            <li>@Html.ActionLink("CARGOS", "Index", "Cargoes")</li>
            <li>@Html.ActionLink("CLIENTE", "Index", "Clientes")</li>
            <li class="active">@Html.ActionLink("ESTADO", "Index", "EstadoSerProes")</li>
            <li>@Html.ActionLink("LINEA DE TRABAJO", "Index", "LineaTrabajoes")</li>
            <li>@Html.ActionLink("UBICACION", "Index", "Pais")</li>
            <li>@Html.ActionLink("RECURSO TECNICO", "Index", "RecursoTecnicoes")</li>
            <li>@Html.ActionLink("PERSONA", "Index", "Personas")</li>
            <li>@Html.ActionLink("USUARIO", "Index", "Usuarios")</li>
            <li>@Html.ActionLink("ADMIN", "Index", "Administradors")</li>
        </ul>
    </nav>
    <h2 class="text-center " style="color:darkblue">ESTADO</h2>
    <div class="container-fluid ">

        <p>

            <a href="@Url.Action("Create", "EstadoSerProes")" title="Editar datos" class="btn btn-primary">
                <img src="https://previews.123rf.com/images/123vector/123vector1710/123vector171000257/88355140-ilustraci%C3%B3n-del-signo-m%C3%A1s-icono-de-c%C3%ADrculo-verde.jpg" width="20" height="20">

                <span><strong>Agregar Estado</strong></span>
            </a>
        </p>
    </div>
    <p></p>

    <div class="input-group">
        <span class="input-group-addon">Buscar</span>
        <input id="entradafilter" type="text" class="form-control" placeholder="Ingresa el dato que desees buscar...">
    </div><p></p>
    <div class="col-md-12">
        <table id="tblProduct" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th @Html.DisplayNameFor(model => model.codEstado)>
                        CÓDIGO
                    </th>
                    <th @Html.DisplayNameFor(model => model.nombreEstadoSerPro)>
                        ESTADO
                    </th>

                    <th>ACCIONES</th>
                </tr>
            <tbody class="contenidobusqueda">
                @foreach (var item in Model)
                {
                    <tr>
                        <td  class="text-center">
                            @Html.DisplayFor(modelItem => item.codEstado)
                        </td>
                        <td  class="text-left">
                            @Html.DisplayFor(modelItem => item.nombreEstadoSerPro)
                        </td>

                        <td class="text-center">
                            <a href="@Url.Action("Edit", "EstadoSerProes",  new { id = item.id })" title="Editar datos" class="btn btn-sm btn-info"><img src="http://icons.iconarchive.com/icons/designcontest/outline/256/Pencil-icon.png" width="20" height="20"></a>
                            <a href="@Url.Action("Delete", "EstadoSerProes",  new { id = item.id })" title="Eliminar" class="btn btn-sm btn-danger"><img src="https://findicons.com/files/icons/1580/devine_icons_part_2/128/trash_recyclebin_empty_closed.png" width="20" height="20"></a>
                            <!--<a href="@Url.Action("Details", "EstadoSerProes",  new { id = item.id })" title="Ver Datos" class="btn btn-sm btn-success"><img src="https://cdn0.iconfinder.com/data/icons/files-documents/512/YPS__file_document_enlarge_magnifier_magnify_examine_read_paper_page_text-128.png" width="20" height="20"></a>-->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
