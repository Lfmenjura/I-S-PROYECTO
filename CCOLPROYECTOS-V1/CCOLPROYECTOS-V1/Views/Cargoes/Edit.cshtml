@model CCOLPROYECTOS_V1.Cargo

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<div class=" jumbotron col-md-12" style="        border: 4px solid #002F65">
    <table id="tblProduct" class="table table-striped table-bordered" width="80%">
        <div class="form-horizontal">
            <h2 class="text-center " style="color:darkblue">CARGOS</h2>
            <h4 class="text-left">EDITAR LOS DATOS QUE SEAN NECESARIOS</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                <div class="col-md-2">
                    CODIGO:
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.codCargo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codCargo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    CARGO:
                </div>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombreCargo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombreCargo, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success" />
            <a href="@Url.Action("Index")" class="btn btn-primary">

                <span><strong>Regresar a la Lista</strong></span>
            </a>
        </div>
        

    </div>

</div>

}


          
        
       

