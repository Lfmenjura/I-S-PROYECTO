@model CCOLPROYECTOS_V1.Pais

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class=" jumbotron form-horizontal" style="        border: 4px solid #002F65">
    <h2 class="text-center " style="color:darkblue">CREAR PAIS</h2>


    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    CODIGO:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.codigoPais, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigoPais, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    PAIS:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.nombrePais, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombrePais, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a href="@Url.Action("Index")" class="btn btn-primary">

                    <span><strong>Regresar a la Lista</strong></span>
                </a>
            </div>


        </div>
    </div>
    }

