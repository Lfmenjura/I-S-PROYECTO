            </div>

            <div class="col-md-10">
                @Html.DropDownList("idRecursoT", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idRecursoT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    LINETA DE TRABAJO:
                </dt>
            </div>


            <div class="col-md-10">
                @Html.DropDownList("idLineaT", null, htmlAttributes: new { @class = "form-control" })
