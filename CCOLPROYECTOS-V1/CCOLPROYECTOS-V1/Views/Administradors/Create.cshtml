@model CCOLPROYECTOS_V1.Administrador

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" jumbotron form-horizontal" style="        border: 4px solid #002F65">
        <h2 class="text-center " style="color:darkblue">CREAR ADMINISTRADOR</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    CÓDIGO:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.codigoAdmin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigoAdmin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    NOMBRE:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.DropDownList("idPersona", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idPersona, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    CORREO:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.correoAdmin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.correoAdmin, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    CONTRASEÑA:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.contraseñaAdmin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contraseñaAdmin, "", new { @class = "text-danger" })
            </div>
        </div>

    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success" />
            <a href="@Url.Action("Index")" class="btn btn-primary">

                <span><strong>Regresar a la Lista</strong></span>
            </a>
        </div>


    </div>
</div>
}
