@model CCOLPROYECTOS_V1.Ciudad

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" jumbotron form-horizontal" style="        border: 4px solid #002F65">
        <h2 class="text-center " style="color:darkblue">CREAR CIUDAD</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    DEPARTAMENTO:
                </dt>
            </div>


            <div class="col-md-10">
                @Html.DropDownList("idDepartamento", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idDepartamento, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    CÓDIGO:
                </dt>
            </div>


            <div class="col-md-10">
                @Html.EditorFor(model => model.codigoCiudad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigoCiudad, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    CIUDAD:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreCiudad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreCiudad, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a href="@Url.Action("Index")" class="btn btn-primary">

                    <span><strong>Regresar a la Lista</strong></span>
                </a>
            </div>


        </div>
    </div>
}
