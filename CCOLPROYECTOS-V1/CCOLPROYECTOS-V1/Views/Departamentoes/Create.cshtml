@model CCOLPROYECTOS_V1.Departamento

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class=" jumbotron form-horizontal" style="        border: 4px solid #002F65">
        <h2 class="text-center " style="color:darkblue">CREAR DEPARTAMENTO</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    PAIS:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.DropDownList("idPais", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idPais, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    CÓDIGO:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.codigoDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigoDepartamento, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <dt>
                    DEPARTAMENTO:
                </dt>
            </div>

            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreDepartamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a href="@Url.Action("Index")" class="btn btn-primary">

                    <span><strong>Regresar a la Lista</strong></span>
                </a>
            </div>


        </div>
    </div>
}

